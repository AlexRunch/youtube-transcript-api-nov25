# Flask
PORT=5000
DEBUG=False

# ============================================================================
# Webshare Static Residential Proxy Configuration
# ============================================================================
# YouTube блокирует IP адреса облачных провайдеров (Railway, AWS, GCP и т.д.)
# Решение: использовать Static Residential прокси через Webshare
#
# Как получить данные:
# 1. Зайти на https://proxy.webshare.io/
# 2. Перейти в Static Residential > Proxy List
# 3. Выбрать любой прокси со статусом "Working"
# 4. Скопировать Proxy Address, Username, Password
#
# Пример:
# WEBSHARE_PROXY_ADDRESS=63.141.62.166:6459
# WEBSHARE_PROXY_USERNAME=hhlnixdt
# WEBSHARE_PROXY_PASSWORD=54tssmyl37of

WEBSHARE_PROXY_ADDRESS=your_proxy_ip:port
WEBSHARE_PROXY_USERNAME=your_username
WEBSHARE_PROXY_PASSWORD=your_password

# ============================================================================
# Telegram Alerts (опционально)
# ============================================================================
# Для получения уведомлений о блокировках YouTube
# 1. Создать бота через @BotFather в Telegram
# 2. Получить токен бота
# 3. Узнать свой chat_id (можно через @userinfobot)

TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id
ENABLE_TELEGRAM_ALERTS=true

# Настройка алертов
ALERT_DEBOUNCE_MINUTES=5  # Минимум минут между одинаковыми алертами

# ============================================================================
# Daily Reports (опционально)
# ============================================================================
# Ежедневные отчеты в Telegram о статистике использования

ENABLE_DAILY_REPORTS=true
DAILY_REPORT_TIME=18:00  # Время отправки отчета (UTC)

# ============================================================================
# Railway Production Settings
# ============================================================================
# Railway автоматически устанавливает PORT
# Настройка Webshare обязательна для работы на Railway без блокировок
